{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        "profile": {
          ".read": "auth !== null",
          ".write": "$uid === auth.uid",
          "artistName": {
            ".validate": "newData.isString() && newData.val().length >= 2 && newData.val().length <= 20"
          },
          "bio": {
            ".validate": "newData.isString() && newData.val().length <= 300"
          },
          "lookingFor": {
            ".validate": "newData.isString() && newData.val().length <= 50"
          },
          "skills": {
            "producer": {
              ".validate": "newData.isBoolean()"
            },
            "singer": {
              ".validate": "newData.isBoolean()"
            },
            "rapper": {
              ".validate": "newData.isBoolean()"
            },
            "$other": {
              ".validate": "! newData.exists()"
            }
          },
          "producerSkills": {
            "flStudio": {
              ".validate": "newData.isBoolean()"
            },
            "abletonLive": {
              ".validate": "newData.isBoolean()"
            },
            "logicPro": {
              ".validate": "newData.isBoolean()"
            },
            "$other": {
              ".validate": "! newData.exists()"
            }
          },
          "$other": {
            ".validate": "! newData.exists()"
          }
        },
        "matches": {
          ".read": "$uid === auth.uid",
          "$other_uid": {
            ".validate": "newData.isBoolean()"
          }
        },
        "groups": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "$group": {
            ".validate": "newData.isBoolean() || newData.val() == null"
          }
        },
        "chats": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "$chat": {
            ".validate": "newData.isBoolean()"
          }
        }
      }
    }
  }
}